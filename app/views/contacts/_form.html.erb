<%= form_with(model: contact, data: { controller: "bridge--form", action: "turbo:submit-start->bridge--form#submitStart turbo:submit-end->bridge--form#submitEnd" }) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :avatar, style: "display: block" %>
    <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :primary_email, style: "display: block" %>
    <%= form.email_field :primary_email %>
  </div>

  <div>
    <%= form.label :secondary_email, style: "display: block" %>
    <%= form.email_field :secondary_email %>
  </div>

  <div>
    <%= form.submit nil, data: { "bridge--form-target": "submit", "bridge-title": "Save" } %>
  </div>
<% end %>
