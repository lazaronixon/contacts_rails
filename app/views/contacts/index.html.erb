<% if notice.present? %>
  <p style="color: green" data-controller="bridge--flash-message"><%= notice %></p>
<% end %>

<h1 class="hide-on-native">Contacts</h1>

<div id="contacts">
  <% @contacts.each do |contact| %>
    <%= render contact %>
    <p>
      <%= link_to "Show this contact", contact %>
    </p>
  <% end %>
</div>

<%= link_to "New contact", new_contact_path, data: { controller: "bridge--nav-button", bridge_title: "New Contact" } %>


<%= link_to "numbers", "/numbers" %>


<% if turbo_native_app? %>
  <h1>It has turbo native in the user agent</h1>
<% end %>
