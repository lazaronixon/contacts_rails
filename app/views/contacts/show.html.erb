<% if notice.present? %>
  <p style="color: green" data-controller="bridge--flash-message"><%= notice %></p>
<% end %>

<% content_for(:title, @contact.name) %>

<%= render @contact %>

<div>
  <div class="hide-on-native">
    <%= link_to "Edit this contact", edit_contact_path(@contact), data: { controller: "bridge--nav-button", bridge_title: "Edit" } %> |
    <%= link_to "Back to contacts", contacts_path %>
  </div>

  <%= link_to "Destroy this contact", @contact, "data-turbo-method": :delete %>
</div>
